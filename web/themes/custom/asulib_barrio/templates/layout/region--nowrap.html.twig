{#
/**
 * @file
 * Bartik's theme implementation to display a header region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% if content %}
  {% if backtosearch %}
    <div class="backtosearch-link">
      <a href="{{ backtosearch }}"><i class="fas fa-arrow-left"></i>Back to search</a>
    </div>
  {% endif %}
  {% if backtoitem %}
    <div class="backtosearch-link">
      <a href="{{ backtoitem }}"><i class="fas fa-arrow-left"></i> Back to item</a>
    </div>
  {% endif %}
  {{ content }}
{% endif %}
