{
    "name": "islandora/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Islandora Foundation",
            "role": "Owner",
            "email": "community@islandora.ca"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
	{
	    "type": "composer",
	    "url": "https://asset-packagist.org"
	}
    ],
    "require": {
        "bower-asset/jquery-ui-slider-pips": "^1.11",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/address": "^1.8",
        "drupal/admin_toolbar": "^2.0",
        "drupal/at_tools": "^3.2",
        "drupal/bibcite": "^1.0@alpha",
        "drupal/bootstrap_barrio": "^5.0",
        "drupal/bootstrap_sass": "^5.0",
        "drupal/cas": "^1.7",
        "drupal/cas_attributes": "^1.0@beta",
        "drupal/cdn": "^3.5",
        "drupal/clamav": "^1.1",
        "drupal/config_split": "^1.4",
        "drupal/console": "~1.0",
        "drupal/content_browser": "^1.0@alpha",
        "drupal/context": "4.x-dev",
        "drupal/core": "^8.8.0",
        "drupal/core-dev": "^8.8.0",
        "drupal/devel": "^2.0",
        "drupal/diff": "^1.0",
        "drupal/embed": "^1.3",
        "drupal/entity_embed": "^1.0@RC",
        "drupal/facets": "^1.3",
        "drupal/features": "^3.11",
        "drupal/file_replace": "^1.1",
        "drupal/format_bytes": "^1.0",
        "drupal/group": "^1.2",
        "drupal/jsonb": "^1.0@beta",
        "drupal/matomo": "^1.7",
        "drupal/message": "^1.0",
        "drupal/message_digest": "^1.0@RC",
        "drupal/message_subscribe_email": "^1.0",
        "drupal/metatag": "^1.11",
        "drupal/migrate_devel": "^2.0",
        "drupal/migrate_file": "^1.1",
        "drupal/migrate_run": "^2.0@beta",
        "drupal/orcid": "1.x-dev",
        "drupal/paragraphs": "^1.11",
        "drupal/pathauto": "^1.8",
        "drupal/pdf": "1.x-dev",
        "drupal/rdfui": "^1.0-beta1",
        "drupal/redirect": "^1.6",
        "drupal/rest_oai_pmh": "^1.0",
        "drupal/restui": "^1.16",
        "drupal/rrssb": "^2.2",
        "drupal/s3fs": "^3.0@alpha",
        "drupal/s3fs_cors": "^1.0@beta",
        "drupal/schema_metatag": "^1.6",
        "drupal/search_api_solr": "^4.1",
        "drupal/simple_sitemap": "^3.7",
        "drupal/smtp": "^1.0@RC",
        "drupal/superfish": "^1.4",
        "drupal/title_length": "^1.1",
        "drupal/token": "^1.6",
        "drupal/transliterate_filenames": "^1.3",
        "drupal/twig_tweak": "^2.6",
        "drupal/upgrade_status": "^2.9",
        "drupal/variationcache": "^1.0",
        "drupal/views_bootstrap": "^4.3",
        "drupal/webform": "^5.18",
        "drupal/weight": "^3.1",
        "drupal/workbench": "^1.3",
        "drush/drush": "^9.0",
        "islandora-rdm/islandora_fits": "dev-master",
        "islandora/carapace": "dev-8.x-3.x",
        "islandora/islandora_defaults": "dev-8.x-1.x",
        "islandora/openseadragon": "dev-8.x-1.x",
        "symfony/event-dispatcher": "4.3.4 as 3.4.99",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library", "vendor:npm-asset", "vendor:bower-asset"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "patches": {
            "drupal/context": {
                "Views integration": "https://www.drupal.org/files/issues/context-views-condition-2938094-6.patch"
	    },
	    "drupal/core": {
		"fix for jsonapi": "https://www.drupal.org/files/issues/2020-02-11/2996114-124.patch"
	    }
        },
	"installer-types": ["npm-asset", "bower-asset"]
    }
}
