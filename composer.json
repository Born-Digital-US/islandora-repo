{
    "name": "islandora/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Islandora Foundation",
            "role": "Owner",
            "email": "community@islandora.ca"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
	{
	    "type": "composer",
	    "url": "https://asset-packagist.org"
	}
    ],
    "require": {
        "php": "^7.4",
        "bower-asset/jquery-ui-slider-pips": "^1.11",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/address": "^1.8",
        "drupal/admin_toolbar": "^2.0",
        "drupal/archivesspace": "^1.0",
        "drupal/bootstrap_barrio": "^5.0",
        "drupal/bootstrap_sass": "^5.0",
        "drupal/cas": "^1.7",
        "drupal/cas_attributes": "1.x-dev@dev",
        "drupal/cdn": "^3.5",
        "drupal/clamav": "^2.0",
        "drupal/config_split": "^1.5",
        "drupal/console": "~1.0",
        "drupal/content_browser": "^1.0@alpha",
        "drupal/context": "4.x-dev",
        "drupal/core-composer-scaffold": "^9.1",
        "drupal/core-project-message": "^9.1",
        "drupal/core-recommended": "^9.1",
        "drupal/devel": "^4.0",
        "drupal/diff": "^1.0",
        "drupal/embed": "^1.3",
        "drupal/entity_embed": "^1.0@RC",
        "drupal/entity_reference_unpublished": "^1.2",
        "drupal/facets": "^1.6",
        "drupal/features": "^3.11",
        "drupal/file_replace": "^1.1",
        "drupal/flexslider": "^2.0",
        "drupal/flysystem": "^2.0@alpha",
        "drupal/format_bytes": "^1.0",
        "drupal/google_analytics": "^3.1",
        "drupal/group": "^1.2",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/jsonb": "^1.0@beta",
        "drupal/jw_player": "^1.0@beta",
        "drupal/matomo": "^1.7",
        "drupal/message": "^1.0",
        "drupal/message_subscribe_email": "^1.0",
        "drupal/metatag": "^1.14",
        "drupal/metatag_google_scholar": "^1.0",
        "drupal/migrate_devel": "^2.0",
        "drupal/migrate_file": "^2.0",
        "drupal/migrate_run": "^2.0@beta",
        "drupal/name": "^1.x-dev",
        "drupal/paragraphs": "^1.11",
        "drupal/pathauto": "^1.8",
        "drupal/pdf": "1.x-dev",
        "drupal/rdfui": "^1.0-beta1",
        "drupal/redirect": "^1.6",
        "drupal/rest_oai_pmh": "^1.0",
        "drupal/restui": "^1.16",
        "drupal/rrssb": "^2.2",
        "drupal/s3fs": "^3.0@alpha",
        "drupal/s3fs_cors": "^1.0@beta",
        "drupal/schema_metatag": "^1.7",
        "drupal/search_api_solr": "^4.1",
        "drupal/simple_sitemap": "^3.7",
        "drupal/smtp": "^1.0@RC",
        "drupal/superfish": "^1.4",
        "drupal/title_length": "^1.1",
        "drupal/token": "^1.6",
        "drupal/transliterate_filenames": "^1.3",
        "drupal/twig_tweak": "^2.6",
        "drupal/upgrade_status": "^3.0",
        "drupal/variationcache": "^1.0",
        "drupal/views_bootstrap": "^4.3",
        "drupal/views_bulk_edit": "^2.4",
        "drupal/views_bulk_operations": "^3.9",
        "drupal/webform": "^6.0@beta",
        "drupal/weight": "^3.2",
        "drupal/workbench": "^1.3",
        "drupal/workbench_email": "^1.7",
        "drush/drush": "^10.3",
        "islandora-rdm/islandora_fits": "dev-master",
        "islandora/chullo": "dev-dev",
        "islandora/controlled_access_terms": "dev-8.x-1.x",
        "islandora/islandora": "dev-8.x-1.x",
        "islandora/islandora_defaults": "dev-8.x-1.x",
        "islandora/openseadragon": "dev-8.x-1.x",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "patchLevel": {
            "drupal/core": "-p2"
        },
	       "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
	    "locations": {
                "web-root": "web/"
            }
        },
        "patches": {
            "drupal/context": {
                "Views integration": "https://www.drupal.org/files/issues/context-views-condition-2938094-6.patch"
	    },
	    "drupal/core": {
		"fix for taxo term save": "https://www.drupal.org/files/issues/2020-10-29/2893747-33.patch",
		"fix for blocks not showing up": "https://www.drupal.org/files/issues/2018-10-27/2997898-21.patch"
	    }
        },
	"installer-types": ["npm-asset", "bower-asset"]
    },
    "require-dev": {
        "drupal/core-dev": "^9.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^5.2"
    }
}
